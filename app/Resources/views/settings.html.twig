{% extends 'base.html.twig' %}

{% block title %}Alibapass - Settings{% endblock %}

{% block category %}

            <div class="row">
                <div class="col-md-6">
                    <form id="id-details-form" role="form">
                        <div class="panel panel-default">
                            <div class="panel-heading">Change your Details</div>
                            <div class="panel-body">
                                <div class="form-group has-feedback" id="id-group-div-form-firstname-settings">
                                    <input type="hidden" id="id-settings-user-id" />
                                    <label for="id-settings-firstname">First Name</label>
                                    <input type="text" class="form-control" id="id-settings-firstname" placeholder="Your First Name" value="{{ user_first_name }}" />
                                    <div id="id-settings-error-firstname-div" class="help-block collapse"></div>
                                </div>
                                <div class="form-group has-feedback" id="id-group-div-form-lastname-settings">
                                    <label for="id-settings-lastname">Last Name</label>
                                    <input type="text" class="form-control" id="id-settings-lastname" placeholder="Your Last Name" value="{{ user_last_name }}" />
                                    <div id="id-settings-error-lastname-div" class="help-block collapse"></div>
                                </div>
                                <div class="form-group has-feedback" id="id-group-div-form-email-settings">
                                    <label for="id-settings-email">Email Address</label>
                                    <input type="text" class="form-control" id="id-settings-email" placeholder="Your Email Address" value="{{ user_email }}" />
                                    <div id="id-settings-error-email-div" class="help-block collapse"></div>
                                </div>
                                <div class="form-group has-feedback" id="id-group-div-form-username-settings">
                                    <label for="id-settings-username">Username</label>
                                    <input type="text" class="form-control" id="id-settings-username" placeholder="Your Username" value="{{ user_username }}" />
                                    <div id="id-settings-error-username-div" class="help-block collapse"></div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <button id="id-settings-change-details-button" type="button" class="btn btn-warning">Change</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <form id="id-password-form" role="form">
                        <div class="panel panel-default">
                            <div class="panel-heading">Change your Password</div>
                            <div class="panel-body">
                                <div class="form-group has-feedback" id="id-group-div-form-current-password-settings">
                                    <label for="id-settings-current-password">Current Password</label>
                                    <input type="password" class="form-control" id="id-settings-current-password" placeholder="Your Current Password" />
                                    <div id="id-settings-error-current-password-div" class="help-block collapse"></div>
                                </div>
                                <div class="form-group has-feedback" id="id-group-div-form-new-password-settings">
                                    <label for="id-settings-new-password">New Password</label>
                                    <input type="password" class="form-control" id="id-settings-new-password" placeholder="Your New Password" />
                                    <div id="id-settings-error-new-password-div" class="help-block collapse"></div>
                                </div>
                                <div class="form-group has-feedback" id="id-group-div-form-password-confirm-settings">
                                    <label for="id-settings-new-password-again">Retype New Password</label>
                                    <input type="password" class="form-control" id="id-settings-new-password-again" placeholder="Retype your New Password" />
                                    <div id="id-settings-error-new-password-again-div" class="help-block collapse"></div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <button id="id-settings-change-password-button" type="button" class="btn btn-warning">Change</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

{% endblock %}