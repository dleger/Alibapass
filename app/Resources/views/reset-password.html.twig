{% extends 'base-login.html.twig' %}

{% block title %}Alibapass - Reset your Password{% endblock %}

{% block category %}
    <div class="row vertical-align">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Reset your Password</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input id="id-token" type="hidden" value="{{ token }}" />
                                <input class="form-control" placeholder="Your new Password" id="id-reset-password-first" type="password" />
                            </div>
                            <div class="form-group has-feedback">
                                <input class="form-control" placeholder="Please retype your new Password" id="id-reset-password-second" type="password" />
                                <div id="id-password-error" class="help-block"></div>
                            </div>
                            <input class="btn btn-success" type="submit" value="Change" id="id-change-button" />
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}